### Checking this

# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /players                                Application.players
GET     /empires                                Application.empires
GET     /games                                  Application.games
GET     /login                                  Authentication.login
GET     /no_user_login                          Authentication.noUserLogin
GET     /incorrect_password_login               Authentication.incorrectPasswordLogin
GET     /logout                                 Authentication.logout
GET     /movement                               Application.movement
GET     /gameScreen                             Application.gameScreen
GET     /gameScreen/{gameName}                  Application.gameScreen({gameName})

# Post
POST    /authenticate                           Authentication.authenticate

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
