# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /players                                Application.players
GET     /empires                                Application.empires
GET     /games                                  Application.games

# Post
POST    /login_credentials                      Application.login_credentials
POST    /emailTester                            Application.emailTester

GET     /redirected_page                        Application.redirected_page

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
